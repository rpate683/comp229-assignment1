<!DOCTYPE html>
<html lang="en">
<head>

    <! -- head -- >
    <%- include('common/head'); %>
    <! -- head -- >
</head><!--/head-->

<body>

<! -- header -- >
<%- include('common/header'); %>
<! -- /header-- >

<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-8">
                        <h1 class="title">Business Contacts</h1>
                    </div>
                    <div class="col-sm-4 justify-content-md-right">
                        <a href="/business-contacts/add" class="btn btn-primary btn-lg pull-right">Add Business
                            Contacts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#action-->

<section id="services">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm-12 text-center padding" data-wow-duration="1000ms" data-wow-delay="300ms">
                <table id="businessContacts" class="table table-striped table-hover" border="1">
                    <thead>
                    <tr class="d-flex">
                        <th scope="col" class="text-center">#</th>
                        <th scope="col" class="text-center">Name</th>
                        <th scope="col" class="text-center">Number</th>
                        <th scope="col" class="text-center">Email</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(let count = 0; count < BusinessContactList.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td class="text-center"><%= BusinessContactList[count].name %></td>
                            <td class="text-center"><%= BusinessContactList[count].number %></td>
                            <td class="text-center"><%= BusinessContactList[count].email %></td>
                            <td class="text-center">
                                <a href="business-contacts/edit/<%= BusinessContactList[count]._id %>">Edit</a> |
                                <a href="business-contacts/delete/<%= BusinessContactList[count]._id %>">Delete</a>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<!--/#portfolio-->


<! -- footer -- >
<%- include('common/footer'); %>
<! -- footer -- >

</body>
</html>